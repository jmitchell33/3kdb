#class {bot} {open}

#var bot_message_1 '---- KAYOS WARS STEPPER ----';
#var bot_message_2 '---- ALL TARGETS ----';
#echo {$bot_message_1};
#echo {$bot_message_2};

#NOP -- Clear old kayos variables and check inventory to see if there are any keys/cells;
#var kayos[key] 0;
#var kayos[cell] 0;
#var kayos[bunker] {};
#var kayos[current_bunker] 1;
#var kayos[ship] 0;
#delay 2 #send {i};

#var {bot[path]} {e;e;e;e;e;e;e;n;w;w;w;w;w;w;w;n;e;e;e;e;e;e;e;n;w;w;w;w;w;w;w;n;e;e;e;e;e;e;e;n;w;w;w;w;w;w;w;n;e;e;e;e;e;e;e;n;w;w;w;w;w;w;w;s;s;s;s;s;s;s};
#var {bunker_path} {enter bunker;n;w;e;e;n;{grab cell};s;w;s;out};
#var {spaceship_path} {e;e;e;e;{open briefcase;touch beacon;.stop}};

#act {^An intricate digital key: Ok.$} {#math kayos[key] {$kayos[key] + 1}} {1};
#act {^key: Taken.$} {#math kayos[key] {$kayos[key] + 1}} {1};
#act {^You grab the power cell from the locker.$} {
    #math kayos[cell] {$kayos[cell] + 1};
    #math kayos[current_bunker] {$kayos[current_bunker] + 1};
    #echo {POWER CELL FOUND};
    ..
} {1};

#act {^There's no longer a power cell here.  Someone must have already grabbed it.$} {
    #math kayos[current_bunker] {$kayos[current_bunker] + 1};
    #echo {POWER CELL ALREADY GONE};
    ..
} {1};

#NOP -- This is the alias to do bunker actions;
#alias .bunkerActions {
    #if {"$kayos[current_bunker]" == "1"} {
        #map run $kayos[bunker][1];
        #delay 3 {
            #list bot[steps] create {$bunker_path};
            unlock bunker;
            #map goto 22675;
            #delay 2 {..};
        };
    };
    #if {"$kayos[current_bunker]" == "2"} {
        #map goto ${kayos[bunker][1]};
        #delay 3 {
            #map run $kayos[bunker][2];
        };
        #delay 5 {
            #list bot[steps] create {$bunker_path};
            unlock bunker;
            #map goto 22675;
            #delay 2 {..};
        };
    };
    #if {"$kayos[current_bunker]" == "3"} {
        #map goto ${kayos[bunker][2]};
        #delay 3 {
            #map run $kayos[bunker][3];
        };
        #delay 5 {
            #list bot[steps] create {$bunker_path};
            unlock bunker;
            #map goto 22675;
            #delay 2 {..};
        };
    };
    #if {"$kayos[current_bunker]" == "4"} {
        #map goto ${kayos[bunker][3]};
        #delay 3 {
            #map run $kayos[ship];
        };
        #delay 5 {
            #3 insert cell;
            #list bot[steps] create {$spaceship_path};
            teleport;
            #map goto 10382;
            #delay 2 {..};
        };
    };
};

#NOP -- When the bot completes the main field, loop the 3 bunkers and then the spaceship;
#act {^------- BOT COMPLETE -----} {
    #var checkBunker 0;
    #var bot[step] 1;
    .pause;
    #delay {bunker_run} {
        #if {"$kayos[current_bunker]" == "1"} {
            #echo {MAIN FIELD CLEAR -- HEADING TO BUNKER 1};
            .bunkerActions;
        };
        #if {"$kayos[current_bunker]" == "2"} {
            #echo {HEADING TO BUNKER 2};
            .bunkerActions;
        };
        #if {"$kayos[current_bunker]" == "3"} {
            #echo {HEADING TO BUNKER 3};
            .bunkerActions;
        };
        #if {"$kayos[current_bunker]" == "4"} {
            #echo {HEADING TO SHIP};
            .bunkerActions;
        };
    } {5};
} {1};

#NOP -- These two are for necromancer inventory, which is of course different than standard;
#var checkKey 1;
#act {%+2sAn intricate digital key} {
    #if {"$checkKey" == "1" && "$inventory_check" == "1"} {
        #var checkKey 0;
        #var kayos[key] 1;
        #delay 1 {#var checkKey 1};
    } {
        #math kayos[key] {$kayos[key] + 1};
    };
} {5};

#var checkCell 1;
#act {%+2sA dark mass of energy} {
    #if {"$checkCell" == "1" && "$inventory_check" == "1"} {
        #var checkCell 0;
        #var kayos[cell] 1;
        #delay 1 {#var checkCell 1};
    } {
        #math kayos[cell] {$kayos[cell] + 1};
    };
} {5};

#act {%d%*An intricate digital key.$} {
    #if {"$inventory_check" == "1"} {
        #var tempVar %2;
        #replace tempVar { } {};
        #replace tempVar {*} {};
        #var kayos[key] $tempVar;
    };
} {6};

#act {%d%*A dark mass of energy.$} {
    #if {"$inventory_check" == "1"} {
        #var tempVar %2;
        #replace tempVar { } {};
        #replace tempVar {*} {};
        #var kayos[cell] $tempVar;
    };
} {6};


