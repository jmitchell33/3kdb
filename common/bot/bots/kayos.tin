#var checkBunker 1;
#act {^-i-A squat bunker.$} {
    #if {"$bot[foundmob]" == "1"} {#return};
    #if {"$checkBunker" == "1"} {
        #map get roomvnum bunkerVnum;

        #if {"$kayos[bunker][1]" == "$bunkerVnum" || "$kayos[bunker][2]" == "$bunkerVnum" || "$kayos[bunker][3]" == "$bunkerVnum"} {
            #echo {Bunker already recorded: $bunkerVnum};
        } {
            #switch &kayos[bunker][] {
                #case 0 {
                    #var kayos[bunker][1] $bunkerVnum;
                    #echo {KAYOSBUNKER SET 1 $bunkerVnum};
                };
                #case 1 {
                    #var kayos[bunker][2] $bunkerVnum;
                    #echo {KAYOSBUNKER SET 2 $bunkerVnum};
                };
                #case 2 {
                    #var kayos[bunker][3] $bunkerVnum;
                    #echo {KAYOSBUNKER SET 3 $bunkerVnum};
                };
                #default {
                    #echo {Already have 3 bunkers recorded.};
                };
            };
        };
    };
} {1};

#act {^-i-A scorch-marked landing pad.$} {
    #if $checkBunker {
        #map get roomvnum kayos[ship];
    };
} {1};

#act {^-i-An intricate digital key%*$} {get key;} {1};
#act {You cannot go} {mapUndo};

