#NOP -- Corpse Use Trackers;
#NOP -- The goal is to see how many corpses you're using to sustain combat - so we'll only track what;
#NOP -- is being consumed during combat;
#alias .corpseRecord {
    #if $incombat {
        #if $hockey_corpse {
                #var hockey_corpse 0;
        } {
            #math mob[corpses_used] {$mob[corpses_used] + 1};
        };
    };
};

