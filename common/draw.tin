#alias .bot_xp_string {
    #format {bot[report-time]} {%T} {};
    #math bot[delta-time] {$bot[report-time] - $bot[start-time]};
    #if {$bot[delta-time] > 3600} {
        #math bot[delta-time] {$bot[delta-time] / 3600 * 1.00};
        #math bot[delta-rate] {$bot[stats][xp] / $bot[delta-time]};
        #var xp_rate_str @thousandsFormatNumber{$bot[delta-rate]};
        #var xp_time_str $bot[delta-time] Hrs;
    } {
        #math bot[delta-time] {$bot[delta-time] / 60 * 1.00};
        #math bot[delta-rate] {$bot[stats][xp] * 60 / $bot[delta-time]};
        #var xp_rate_str @thousandsFormatNumber{$bot[delta-rate]};
        #var xp_time_str $bot[delta-time] mins;
    };
    #var bot[stats][xp_rate_str] $xp_rate_str;
    #var bot[stats][xp_time_str] $xp_time_str;
};

#NOP -- CAPTION (Corpses, Eternal, Strategies, Bot Status, general data) --;
#alias draw_caption {
    #list caption_data clear;
    #unvar caption_order;

    #foreach *caption_toggle[] key {
        #var caption_order[$caption_toggle[$key][order]] $key;
    };

    #if {"$caption[tab]" == "bot"} {
        #list botlist indexate alias;
        #list botlist find {$bot[alias]} tmpIndex;
        #var tmpName $botlist[$tmpIndex][desc];
        #if {"${tmpName}" == ""} {
            #list caption_data add {<cde>Current Bot: <fbc>N/A<088>};
        } {
            #list caption_data add {<cde>Current Bot: <fbc>$tmpName<088>};
            #list caption_data add {<dee>Path: $bot_current_room/$bot_total_rooms ($bot_progress% in $xp_time_str)};
            .bot_xp_string;
            #list caption_data add {<dee>Kills: $bot[stats][mobs] XP: @thousandsFormatNumber{$bot[stats][xp]} ($bot[stats][xp_rate_str]/hr)};
            #list caption_data add {\n $caption_toggle[bot][string]<088>};

            #variable bot_loop_xp $bot[stats][loop][xp];
            #variable bot_xp $bot[stats][xp];
            #variable bot_loop_coins $bot[stats][loop][coins];
            #variable bot_coins $bot[stats][coins];
            #var tmpLoopKills <dee>Mobs Killed: $bot[stats][loop][mobs];
            #var tmpLoopXp <dee>XP Gained: @thousandsFormatNumber{$bot_loop_xp};
            #var tmpLoopCoins <dee>Coins Earned: @thousandsFormatNumber{$bot_loop_coins};
            #var tmpTotalKills <dee>Mobs Killed: $bot[stats][mobs];
            #var tmpTotalXp <dee>XP Gained: @thousandsFormatNumber{$bot_xp};
            #var tmpTotalCoins <dee>Coins Earned: @thousandsFormatNumber{$bot_coins};
            #var currentLoop {
                \n<cde>Current Loop<088>
                \n$tmpLoopKills
                \n$tmpLoopXp
                \n$tmpLoopCoins
            };
            #var totalLoop {
                \n<cde>Bot Total<088>
                \n$tmpTotalKills
                \n$tmpTotalXp
                \n$tmpTotalCoins
            };

            #list caption_data add {$currentLoop};
            #list caption_data add {$totalLoop};
            #list caption_data add {$caption_toggle[bot_cycle][string]};
        };
    } {
        #foreach $caption_order[] key {
            #if $caption_toggle[$key][active] {
                #list caption_data add {\n $caption_toggle[$key][string]};
            };
        };
    };

    #if {$idle_sec > $deadmanIdleTimeout} {
        #draw calign grid table $caption[top] $caption[left]+1 $caption[bottom] -1 $caption_data[];
    } {
		#draw $theme[caption] calign jeweled filled line $caption[top]+1 $caption[left]+1 $caption[top]+1 -1 {$caption_title_string};
        #draw calign blanked box $caption[top]+2 $caption[left]+1 $caption[bottom] -1 $caption_data[];
    };
};

