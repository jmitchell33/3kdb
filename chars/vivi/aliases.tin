#NOP -- setup contingency with defenses;
#alias {setup_c} {
     cast contingency as armor#cast armor;
     cast contingency as shield#cast magnificent shield;
     cast contingency as minor globe#cast minor globe;
     #delay 2 {prots_armor};
     #delay 4 {prots_ms};
     #delay 6 {prots_mg};
     #delay 8 {prots_mb};
     #delay 10 {prots_pfe};
     #delay 12 {prots_rs}
};

#NOP -- clear contingency;
#alias {clear_c} {
     #10 {cast remove contingency as 1};
     clear_prots
};

