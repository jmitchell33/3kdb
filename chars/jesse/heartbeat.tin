#class {player_heartbeat} {kill}
#class {player_heartbeat} {open}

#var corpse_delay 1;
#var corpse_use 200;

#alias {_player_heartbeat} {
    #if {!$idle_flag} {
        #if {$bot[active] && $my[hp][current] < 600} {
            .pause;
        };
        #if {$bot[paused] && "$my[hp][current]" == "$my[hp][max]" } {
            .unpause;
            ..;
        };
    };
};

#class {player_heartbeat} {close}