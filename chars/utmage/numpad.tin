#class {numpad} {open}
#NOP If using PuTTy, be sure "Disable application keypad mode" is unchecked in Settings -> Terminal -> Features

/* Number Pad Movement */
#macro {\e[B} {s}
#macro {\e[D} {w}
#macro {\e[C} {e}
#macro {\e[A} {n}
#macro {\e[2~} {d}
#macro {\e[3~} {u}
#macro {\e[H} {nw}
#macro {\e[5~} {ne}
#macro {\e[6~} {se}
#macro {\e[F} {sw}

#class {numpad} {close}