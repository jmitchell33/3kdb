        #format summon_dmg[tracked_rounds_rep] {%g} {$summon_dmg[rnd]};
        #format summonBestDmg {%g} {$summon_dmg[vaf][$tmpSummonItem][total][best]};

        #if {$summonTotalDmg > 0} {
