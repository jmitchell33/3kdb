            #format dmgSummary {%+20s %+9s %+9s %+9s %+9s %+9s} {$tmpSummonItem} {$summonHitsPerRnd} {$summonPerHitDmg} {$summonPerRoundDmg} {$summonBestDmg} {$summonTotalDmg};
